{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2019", "dom"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true
  },
  "include": [
    "src/workflow/create-match",
    "src/workflow/create-challenge",
    "src/workflow/create-game",
    "src/domain",
    "src/test",
    "src/workflow/create-game.test.ts",
    "src/workflow/create-game.ts",
    "src/workflow/create-match.test.ts",
    "src/workflow/create-match.ts",
    "src/workflow/create-challenge.test.ts",
    "src/workflow/create-challenge.ts"
  ]
}
